{
  "name": "todotasks",
  "version": "1.0.0",
  "description": "Base project for new taskrunner configurations.",
  "main": "index.js",
  "scripts": {
    "postinstall": "bower install",
    "clean": "rimraf dist/*",
    "lint": "eslint js/**.js",
    "compile-styles": "node-sass bower_components/todomvc-common/*.css dist/app.css",
    "precompile": "npm run lint && npm run clean && npm run compile-styles",
    "compile": "browserify js/app.js -d -p [minifyify --map app.map.json --output dist/bundle.map.json] > dist/app.js",
    "test": "node test/test.js",
    "build": "npm run compile",
    "postbuild": "npm run test",
    "devbuild": "",
    "dev": ""
  },
  "keywords": [
    "tasks",
    "task",
    "build",
    "tools",
    "tool"
  ],
  "author": "Eric Elliott",
  "contributors": [
    "Jess Telford <hi@jes.st> (http://jes.st)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ericelliott/todotasks/issues"
  },
  "homepage": "https://github.com/ericelliott/todotasks",
  "dependencies": {
    "bower": "^1.3.12"
  },
  "devDependencies": {
    "bower": "^1.3.12",
    "browserify": "^8.1.0",
    "eslint": "^0.11.0",
    "exorcist": "^0.1.6",
    "minifyify": "^5.0.0",
    "node-sass": "^2.0.0-beta",
    "rimraf": "^2.2.8",
    "tape": "^3.0.3",
    "uglify": "^0.1.1",
    "uglify-js": "^2.4.16"
  }
}
